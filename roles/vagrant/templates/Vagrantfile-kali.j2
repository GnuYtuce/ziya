# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.ssh.private_key_path = "{{Vagrant_Setup_Path}}/ssh-keys/pentest-env"
  config.ssh.username = "root"
  config.vm.hostname = "kali2017-2-{{Vagrant_Setup_Version}}"

  config.vm.box = 'Sliim/kali-2017.2-amd64'
  config.vm.provider 'virtualbox' do |vb|
    vb.gui = true
    vb.name = "kali2017-2-{{Vagrant_Setup_Version}}"
    vb.memory = '2048'
  end
  config.vm.provision "shell" do |sh|
    sh.inline = <<-SHELL
      uname
    SHELL
  end
end
